{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@components": ["components/index.js"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index.js"],
      "@routes/*": ["routes/*"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks/index.js"],
      "@services/*": ["services/*"],
      "@services": ["services/index.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
